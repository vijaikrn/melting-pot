      <th scope="col">Sl</th>
      <th scope="col">Name</th>
      <th scope="col">Mobile</th>
      
      <th scope="col" style="text-align: center;">Address</th>
      <th scope="col">Pincode</th>
      
      <th scope="col">Action</th>
     
      
    </tr>
  </thead>
  <tbody><%if(address){%>
    <% if( address.length> 0){ %>
      <% for(let i=1;i <=address.length; i++){ %>
        
          <tr>
              <th scope="row">
                  <%= i %>
              </th>
              <td>
                  <%= address[i-1].Name %>
              </td>
              <td>
                  <%= address[i-1].Mobile %>
              </td>
             
              <td>
                  <%= address[i-1].Address %>
              </td>
              
              
              <td>
                <%= address[i-1].Pincode %>
            </td>
              <td><a href="/edit-address?id=<%= address[i-1]._id %>"><i
                          style="color: green;"
                          class="m-r-5 mdi mdi-border-color"></i>Edit</a><br><a
                      data-toggle="modal" style="color: red"; data-target="
                      #exampleModal" href="#"><i
                          class=" m-r-5 mdi mdi-delete-forever"></i>Delete</a>
              </td>
          </tr>
          <!-- model bootstrap -->
          <div class="modal fade" id="exampleModal"  tabindex="-1" role="dialog"
              aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                  <div class="modal-content" >
                      <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Delete
                              The Item ?</h5> <button type="button" class="close"
                              data-dismiss="modal" aria-label="Close"> <span
                                  aria-hidden="true">Ã—</span> </button>
                      </div>
                      <div class="modal-body"> Are you sure you want to delete the
                          item : <strong>
                              <%= address[i-1].Name %>
                          </strong> </div>
                      <div class="modal-footer"> <button type="button"
                              class="btn btn-secondary"
                              data-dismiss="modal">Close</button> <a
                              href="/delete-address?id=<%= address[i-1]._id %>"
                              type="button" class="btn btn-danger">Delete Item</a>
                      </div>
                  </div>
              </div>
          </div>
          <% }} else { %>
              <tr>
                  <td colspan="5">no address exists</td>
              </tr>
