<section>

    <div class="container" style="margin-top: 5em;">
      <div class="row">
        <div class="col-md-6">
          <h2 class="text-center">Add Banner</h2>
          <form action="/admin/banner" method="post"  enctype="multipart/form-data">  
            <label for="">Banner Name</label>
          <input type="text" name="name" placeholder="Enter banner name" class="form-control" />
          <label for="">Banner</label>
          <input type="file" name="image" placeholder="Upload banner image" class="form-control" />
            <button type="submit" class="btn btn-success mt-4 mb-2">Submit</button>
            <% if(typeof message !=='undefined' ){%>
              <p style="color:green">
                <%= message %>
              </p>
              <% } %>
          </form>
  
        </div>
        <table  class="table mt-3">
          <thead>
              <tr>
                  <th scope="col">Sl No</th>
                  <th scope="col">Banner name</th>

                  <th scope="col">Banner image</th>
                  <th scope="col">Delete</th>


              </tr>
          </thead>
          <tbody>
          <tbody>
              <% if( banner.length>= 0){ %>
                  <% for(let i=1;i <=banner.length; i++){ %>
                      <tr>
                          <td>
                              <%= i %>
                          </td>

                          <td>
                              <div class="d-flex align-items-center">
                                  <div class="m-r-10"><a class="btn btn-circle d-flex btn-info text-white"><i
                                              class=" mdi mdi-account-circle"></i></a>
                                  </div>
                                  <div class="">
                                      <h6 class="m-b-0 font-16">
                                          <%=banner[i-1].name %>
                                      </h6>
                                  </div>
                              </div>
                          </td>
                          <td>
                            <% if(banner[i-1].image) { %>
                                <img src="/admin/images/<%= banner[i-1].image %>"
                                    width="40vw" height="40vh">
                                <% }else{ %>
                                    Image Not Found
                                    <% } %>
                        </td>
                          <form action="/admin/delete-banner?id=<%= banner[i-1]._id %>" method="post">
                            <td><button type="submit" class=" btn btn-primary">Delete</button></td>
                        </form>
                

                
                    
                         
                          
                      <% } } else{ %>
                          <tr>
                              <td colspan="5">Banner Not Found</td>
                          </tr>
                          <% } %>

          </tbody>
      </table>
      </div>
    </div>
  </section>