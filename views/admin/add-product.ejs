<section>

  <div class="container" style="margin-top: 5em;">
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-center">Add Product</h2>
        <form action="/admin/add-product" method="post" enctype="multipart/form-data">  
        <label for="">Product Serial Number</label>
          <input type="text" name="Serial" placeholder="Enter product Serial Number" class="form-control" />
          <label for="">Product Name</label>
          <input type="text" name="Name" placeholder="Enter product name" class="form-control" />
          

          <select name="Category" path="Category" style="margin-top:1.5em  ; height: 2em;width: 15em;" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
            <option  selected>Product Category</option>
            <% for(let i=1;i <=category.length; i++){ %>
            <option label="<%=category[i-1].Category %>"  value="<%=category[i-1].Category %>"><%=category[i-1].Category %></option>
            <% }  %>
          </select>
         
          <label for="">Price</label>
          <input type="text" name="Price" placeholder="Enter the price of the product" class="form-control" />
          <label for="">Description</label>
          <input type="text" name="Description" placeholder="Describe the product" class="form-control" />
          <label for="">Image</label>
          <input type="file" name="image" placeholder="Upload product image" class="form-control"accept="image/*" />
          <label for="">Image 2</label>
          <input type="file" name="image" placeholder="Upload product image" class="form-control"accept="image/*" />
          <button type="submit" class="btn btn-success mt-4 mb-2">Submit</button>
          <% if(typeof message !=='undefined' ){%>
            <p style="color:green">
              <%= message %>
            </p>
            <% } %>
        </form>

      </div>
    </div>
  </div>
</section>